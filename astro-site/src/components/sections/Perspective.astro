---
/**
 * Perspective Section
 * Showcases thinking and frameworks to build trust
 */

const statements = [
  "Most brands don't have a positioning problem. They have a courage problem.",
  "The best launch campaigns start 6 months before anyone knows the product exists.",
  "Content that compounds beats content that converts.",
];

const frameworks = [
  {
    title: "The Launch Narrative Formula",
    hook: "Why 90% of tech launches fail at messaging",
    insight: "Great launches don't announce features. They resolve tension.",
    category: "Launch Strategy",
  },
  {
    title: "The Courage Framework",
    hook: "Most brands don't have a positioning problem",
    insight: "Distinctiveness requires sacrifice. The brands that win are the ones willing to be hated by some.",
    category: "Brand Strategy",
  },
  {
    title: "Content That Compounds",
    hook: "Why your content strategy feels like a treadmill",
    insight: "The difference between content that depletes and content that builds. One creates dependency, the other creates assets.",
    category: "Content Strategy",
  },
];
---

<section id="perspective" class="perspective section">
  <div class="container">
    <span class="section-label">Perspective</span>
    <h2 class="perspective-headline">How I Think About Brand</h2>

    <!-- Bold Statements -->
    <div class="statements">
      {statements.map((statement) => (
        <blockquote class="statement">
          <span class="quote-mark">"</span>
          {statement}
        </blockquote>
      ))}
    </div>

    <!-- Framework Cards -->
    <div class="frameworks-grid">
      {frameworks.map((framework) => (
        <article class="framework-card">
          <span class="framework-category">{framework.category}</span>
          <h3 class="framework-title">{framework.title}</h3>
          <p class="framework-hook">{framework.hook}</p>
          <p class="framework-insight">{framework.insight}</p>
        </article>
      ))}
    </div>

    <!-- Subscribe CTA -->
    <div class="perspective-cta">
      <p>Get these frameworks (and more) in your inbox</p>
      <a href="#subscribe" class="btn btn-primary">
        Subscribe
        <span class="btn-arrow">&rarr;</span>
      </a>
    </div>
  </div>
</section>

<style>
  .perspective {
    background-color: var(--color-bg-secondary);
  }

  .section-label {
    display: inline-block;
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    margin-bottom: var(--space-4);
  }

  .perspective-headline {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-12);
  }

  /* Statements */
  .statements {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    margin-bottom: var(--space-16);
  }

  .statement {
    font-size: var(--text-2xl);
    font-weight: var(--font-medium);
    color: var(--color-text-primary);
    line-height: var(--leading-snug);
    padding-left: var(--space-8);
    border-left: 3px solid var(--color-accent);
    margin: 0;
    position: relative;
  }

  .quote-mark {
    position: absolute;
    left: var(--space-2);
    top: -0.2em;
    font-size: var(--text-4xl);
    color: var(--color-accent);
    opacity: 0.5;
    font-family: Georgia, serif;
  }

  /* Framework Cards */
  .frameworks-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
    margin-bottom: var(--space-12);
  }

  .framework-card {
    padding: var(--space-8);
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    transition: all var(--transition-base);
  }

  .framework-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-4px);
  }

  .framework-category {
    display: inline-block;
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    margin-bottom: var(--space-4);
  }

  .framework-title {
    font-size: var(--text-xl);
    margin-bottom: var(--space-3);
  }

  .framework-hook {
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
    margin-bottom: var(--space-4);
  }

  .framework-insight {
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin: 0;
  }

  /* CTA */
  .perspective-cta {
    text-align: center;
    padding: var(--space-12);
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
  }

  .perspective-cta p {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-6);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-4) var(--space-6);
    font-size: var(--text-base);
    font-weight: var(--font-medium);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
    cursor: pointer;
    text-decoration: none;
    border: none;
  }

  .btn-primary {
    background: var(--gradient-accent);
    color: var(--color-text-primary);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-glow);
  }

  .btn-arrow {
    transition: transform var(--transition-base);
  }

  .btn-primary:hover .btn-arrow {
    transform: translateX(4px);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .frameworks-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .frameworks-grid {
      grid-template-columns: 1fr;
    }

    .statement {
      font-size: var(--text-xl);
      padding-left: var(--space-6);
    }

    .quote-mark {
      font-size: var(--text-3xl);
    }
  }
</style>
