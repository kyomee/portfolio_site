---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/layout/Navigation.astro';
import Footer from '../components/layout/Footer.astro';
import ScrollReveal from '../components/interactive/ScrollReveal.astro';
import HeroMotion from '../components/interactive/HeroMotion.astro';
import Subscribe from '../components/sections/Subscribe.astro';
---

<BaseLayout>
  <Navigation />
  <ScrollReveal />

  <main>
    <!-- Hero Section -->
    <section id="hero" class="hero section">

      <HeroMotion />

      <div class="container hero-content">
        <div class="hero-narrative">
          <p class="hero-greeting" data-reveal="1">Hi, I'm</p>
          <h1 class="hero-name" data-reveal="1">Nakyum Song</h1>
          <p class="hero-title" data-reveal="1">Brand strategist exploring narrative clarity and global growth.</p>
          <p class="hero-tagline" data-reveal="2">
            Based in Singapore &amp; Korea.
          </p>
          <p class="hero-description" data-reveal="2">
            I write about brand strategy, positioning, and building across markets.
          </p>
        </div>

        <div class="hero-ctas" data-reveal="3">
          <a href="/work" class="btn btn-primary">
            View My Work
            <span class="btn-arrow">&rarr;</span>
          </a>
          <a href="/contact" class="btn btn-secondary">
            Get in Touch
          </a>
        </div>

        <div class="scroll-indicator" aria-hidden="true">
          <span class="scroll-line"></span>
        </div>
      </div>
    </section>

    <!-- About Preview -->
    <section class="about-preview section" data-reveal>
      <div class="container">
        <div class="preview-content">
          <p class="preview-highlight">
            Most brands don't fail because they lack creativity.<br />
            They fail because, at some point, they lose clarity.
          </p>
          <p class="preview-text">
            My work sits at the intersection of brand narrative and structure. I help brands articulate who they are so that every decision that follows has a clear foundation to build on.
          </p>
          <a href="/about" class="preview-link">
            Read more about me &rarr;
          </a>
        </div>
      </div>
    </section>

    <!-- Featured Work Preview -->
    <section class="work-preview section" data-reveal>
      <div class="container">
        <span class="section-label">Selected Work</span>
        <h2 class="section-title">Case Studies</h2>
        <p class="section-subtitle">
          Case studies from gaming, tech, and lifestyle brands
        </p>
        <a href="/work" class="btn btn-secondary">
          View All Work &rarr;
        </a>
      </div>
    </section>

    <div data-reveal>
      <Subscribe />
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
  }

  .hero-narrative {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    max-width: 600px;
  }

  .hero-greeting {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin: 0;
  }

  .hero-name {
    font-family: var(--font-heading);
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    color: var(--color-text-primary);
    margin: 0;
    letter-spacing: var(--tracking-tight);
  }

  .hero-title {
    font-size: var(--text-lg);
    font-weight: var(--font-medium);
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    margin: 0;
    margin-top: var(--space-2);
  }

  .hero-tagline {
    font-size: var(--text-xl);
    font-weight: var(--font-medium);
    color: var(--color-text-primary);
    margin: 0;
    margin-top: var(--space-2);
    line-height: var(--leading-snug);
  }

  .hero-intro {
    font-size: var(--text-lg);
    font-weight: var(--font-medium);
    color: var(--color-text-primary);
    margin: 0;
    margin-top: var(--space-4);
  }

  .hero-topics {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin: 0;
  }

  .hero-description {
    font-size: var(--text-lg);
    color: var(--color-text-tertiary);
    font-style: italic;
    margin: 0;
  }

  .hero-role {
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    margin: 0;
    margin-top: var(--space-4);
  }

  .hero-ctas {
    display: flex;
    gap: var(--space-4);
    margin-top: var(--space-8);
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-4) var(--space-6);
    font-size: var(--text-base);
    font-weight: var(--font-medium);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
    cursor: pointer;
    text-decoration: none;
  }

  .btn-primary {
    background: var(--gradient-accent);
    color: #ffffff;
    border: none;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-glow);
  }

  .btn-arrow {
    transition: transform var(--transition-base);
  }

  .btn-primary:hover .btn-arrow {
    transform: translateX(4px);
  }

  .btn-secondary {
    background: transparent;
    color: var(--color-text-primary);
    border: 1px solid var(--color-border);
  }

  .btn-secondary:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: var(--space-8);
    left: 50%;
    transform: translateX(-50%);
  }

  .scroll-line {
    width: 2px;
    height: 32px;
    background: linear-gradient(to bottom, var(--color-accent), transparent);
    border-radius: var(--radius-full);
    animation: scrollPulse 2s ease-in-out infinite;
  }

  @keyframes scrollPulse {
    0%, 100% {
      opacity: 1;
      transform: scaleY(1);
    }
    50% {
      opacity: 0.5;
      transform: scaleY(0.8);
    }
  }

  /* Text utilities */
  .text-secondary {
    color: var(--color-text-secondary);
  }

  /* About Preview */
  .about-preview {
    background-color: var(--color-bg-secondary);
  }

  .preview-content {
    max-width: 680px;
    margin: 0 auto;
    text-align: center;
  }

  .preview-highlight {
    font-size: var(--text-xl);
    font-weight: var(--font-medium);
    color: var(--color-text-primary);
    line-height: var(--leading-snug);
    margin: 0 0 var(--space-6);
  }

  .preview-text {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin: 0 0 var(--space-6);
  }

  .preview-link {
    font-size: var(--text-base);
    font-weight: var(--font-medium);
    color: var(--color-accent);
    text-decoration: none;
    transition: opacity var(--transition-fast);
  }

  .preview-link:hover {
    opacity: 0.8;
  }

  /* Work Preview */
  .work-preview {
    text-align: center;
  }

  .section-label {
    display: inline-block;
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    margin-bottom: var(--space-4);
  }

  .section-title {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-4);
  }

  .section-subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-8);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .hero-narrative {
      gap: var(--space-3);
    }

    .hero-title {
      font-size: var(--text-base);
    }

    .hero-tagline {
      font-size: var(--text-lg);
    }

    .hero-intro,
    .hero-topics,
    .hero-description {
      font-size: var(--text-base);
    }

    .hero-role {
      font-size: var(--text-sm);
    }

    .hero-ctas {
      flex-direction: column;
      width: 100%;
      margin-top: var(--space-6);
    }

    .btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>
